{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
    "sourceType": "module",
		"ecmaVersion": 12
  },
	"plugins": [
    "prettier"
  ],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"no-console": ["error", { "allow": ["error"] }],
		"prettier/prettier": [
			"error",
			{
				"doubleQuote": true,
				"printWidth": 80
			}
		]
	}
}
